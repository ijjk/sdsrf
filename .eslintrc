{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6":     true,
    "browser": true,
    "node":    true,
    "mocha":   true
  },   
  "extends": [
    "eslint:recommended", 
    "plugin:react/recommended"
  ],
  "globals": {
    "graphql": false
  },
  "rules": {
    "react/prop-types": 0,
    "react/no-unescaped-entities": 0,
  } 
}
